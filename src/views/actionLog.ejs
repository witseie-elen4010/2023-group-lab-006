<!DOCTYPE html>
<html lang="en">
<head>
    <title>Action Log</title>
    <link rel="stylesheet" 
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        /* Custom styles for the page */
        body {
            padding: 20px;
        }

        h2 {
            margin-bottom: 20px;
        }

        .table {
            border: 1px solid #dee2e6;
        }

        th,
        td {
            border: 1px solid #dee2e6;
            padding: 8px;
        }

        .button-container {
            text-align: right;
            margin-bottom: 20px;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="button-container">
        <a href="/" class="button">Back</a>
    </div>
    <h2>Action Log</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Actor Email</th>
                <th>Action Task</th>
                <th>Action Date</th>
            </tr>
        </thead>
        <tbody>
            <% actionLogs.forEach(actionLog => { %>
            <tr>
                <td><%= actionLog.actorEmail %></td>
                <td><%= actionLog.actionTask %></td>
                <td><%= actionLog.actionDate %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
